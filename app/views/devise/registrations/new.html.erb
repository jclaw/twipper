

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

<div class="jumbotron">
 	<div class="form-group" style="position: relative; left: 410px;">
 		<h2>Please sign up</h2>
	  	<div class="form-inputs">
		    <%= f.input_field :email, required: true, autofocus: true, class: 'form-control', placeholder: 'Email address', style: 'width: 200px; margin: 5px 0px 5px 0px' %>
		    <%= f.input_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), class: 'form-control', placeholder: 'Password', style: 'width: 200px; margin: 5px 0px 5px 0px' %>
		    <%= f.input_field :password_confirmation, required: true, class: 'form-control', placeholder: 'Password confirmation' , style: 'width: 200px; margin: 5px 0px 5px 0px' %>
	  	</div>
	    <div class="form-actions">
    		<%= f.button :submit, "Sign up", style: 'width: 200px; margin: 5px 0px 5px 0px', class: 'btn btn-lg btn-primary btn-block'%>
 		</div>
	</div>
</div>


<% end %>

<%= render "devise/shared/links" %>
